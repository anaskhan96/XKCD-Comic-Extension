{
  "manifest_version": 2,

  "name": "xkcd comics",
  "description": "Displays the latest as well as any random xkcd comic.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "View xkcd latest comic"
  },
  "permissions": [
    "tabs"
  ],
  "content_security_policy": "script-src 'self' https://dynamic.xkcd.com; object-src 'self'"
}